<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.lenovo.sepaltive.HomeActivity">

    <TextView
        android:id="@+id/tv_welcome_text"
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:layout_weight="2"
        android:textSize="20dp"
        android:textColor="#303b2e"
        android:fontFamily="sans-serif-medium"
        />

    <Button
        android:id="@+id/bt_get_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET STARTED"
        android:textSize="30sp"
        android:layout_weight="1"
        android:background="@drawable/my_button"
        android:padding="5dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_follow"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/follow_text"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/bt_fb_link"
            android:gravity="center"
            android:background="#ffffff"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1d2eb1"
            android:textSize="20dp"
            android:clickable="true"
            android:autoLink="web"
            android:text="here"
            />
    </LinearLayout>


</LinearLayout>
