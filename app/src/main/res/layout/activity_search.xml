<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.lenovo.sepaltive.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center"
        android:layout_weight="1">

        <EditText
            android:id="@+id/et_image_search_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type the image name to search" />

        <Button
            android:id="@+id/bt_search_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#9a3dcc"
            android:text="Search Image"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>
